#compdef iswn

# taken from http://mads-hartmann.com/2017/08/06/writing-zsh-completion-scripts.html
function _iswn {
    local line

    progs=""

echo "hello?"

    for i in /opt/sag/sown/bin/iswn-*(.)
    do
        n=$i:t:r:s/iswn-//
        progs="$n $progs"
	echo "progs: $progs"
    done

    # aliases
    for i in pwd pwf
    do
        progs="$i $progs"
    done

    _arguments -C \
        "1: :(help $progs)" \
        "*::arg:->args"

    case $line[1] in
        "log")
            _iswn_log
        ;;
        *)
            _iswn_none
        ;;
    esac
}

function _iswn_log {
    _arguments \
        "--format[oneline,]" \
        "--limit[N entries; default is 5]"
    _files
}

function _iswn_open {
    _files
}

function _iswn_any {
    _files
}

function _iswn_none {
}

function _iswn_quietly {
    _arguments \
        "--silent[Dont output anything]"
}

function _iswn_loudly {
    _arguments \
        "--repeat=[Repeat the <message> any number of times]"
}

echo "wtf?"

# execute on first tab (which is otherwise buffered)
_iswn

# Local variables:
# Mode: sh
# End:
