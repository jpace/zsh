#compdef jv

# taken from http://mads-hartmann.com/2017/08/06/writing-zsh-completion-scripts.html
function _jv {
    local line

    progs=""

    for i in /opt/incava/javalin/bin/jv-*(.)
    do
        n=$i:t:r:s/jv-//
        progs="$n $progs"
    done

    # aliases
    for i in pwd pwf
    do
        progs="$i $progs"
    done

    _arguments -C \
        "1: :(help $progs)" \
        "*::arg:->args"

    case $line[1] in
        "log")
            _jv_log
        ;;
        *)
            _jv_none
        ;;
    esac
}

function _jv_log {
    _arguments \
        "--format[oneline,]" \
        "--limit[N entries; default is 5]"
    _files
}

function _jv_open {
    _files
}

function _jv_any {
    _files
}

function _jv_none {
}

function _jv_quietly {
    _arguments \
        "--silent[Dont output anything]"
}

function _jv_loudly {
    _arguments \
        "--repeat=[Repeat the <message> any number of times]"
}

# execute on first tab (which is otherwise buffered)
_jv

# Local variables:
# Mode: sh
# End:
