#!/usr/bin/zsh -f
# -*- sh-mode -*-

if [[ $# > 0 ]]
then
    name=$1
    if [[ $name:e != "java" ]]
    then
        echo "not a java file"
        exit 1
    fi
    name=$name:s/lib/test
    name=$name:h/${name:t:r:s/_test//}_test.rb
    echo "name: $name"
    java -Itest -Itest/unit -Ilib $name
else
    rake test
fi
